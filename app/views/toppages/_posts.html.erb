<% if @posts %>
<div class="row ">
    <% posts.each do |post| %> 
    <div class="col-sm-4 mt-5">
     <div class="card">
        <iframe height="250" src="https://www.youtube.com/embed/<%=post.url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <div class="mt-4 mb-2">
        <% post.kinds.each do |kind| %>
          <p class="bg-light rounded border p-2 d-inline"><%= kind.k %></p>
        <% end %>
        </div>
        <p class="card-text"><%= post.ex&.truncate(100, omission: ".....") %></p>
         <%= link_to "Detail", post_path(post) ,class:"btn btn-primary"%>
         <div id="post-<%= post.id %>">
           <%= render "favorites/favorite", post: post %>
         </div>
     </div>
    </div>
    </div>
    <% end %>

</div>
 <% paginate posts %>
<% end %>
