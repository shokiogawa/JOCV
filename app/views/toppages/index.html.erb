<% if logged_in? %>
<div class="row">
  <div class="col-sm-3">
    <div class="card mt-4">
           <div class="card-body">
            <div class="card-heading text-center border-bottom">
             <div class="img mb-2">
              <% if current_user.image_url %>
                 <%= image_tag current_user.image_url(:thumb1), class:" ml-3 rounded-circle" %>
              <% else %>
                  <img src="<%= gravatar_url(current_user, size: 80) %>" alt="" class="img-circle">
              
              <% end %>
             </div>
              <p class="ml-3"><%= current_user.name %></p>

            </div>
            　<p class="card-text">派遣隊次:<%= current_user.year %></p>
              <p class="card-text">派遣国:<%= current_user.country%></p>
            <%= link_to edit_user_path(current_user) do %>
             <p class="text-right"><i class="fas fa-user-edit ml-2"></i>プロフィール編集</p>
            <% end %>

           </div>
      </div>
   </div>
   <div class="col-sm-12">
    <%= render "posts", posts: @posts1%>
    
   </div>
    
    
    
    
    
</div>
<% else %>
<div class="container">
  <h1 class="mt-5">Text Book</h1>
  <div class="row">
    <div class="col-sm-3 offset-sm-2 bg-white mt-5">
     <img src="/assets/Grade8.jpg" width="100%" height="100%" alt="grade8">
    </div>
    <div class="col-sm-3 offset-sm-2 bg-white mt-5">
     <img src="/assets/Grade9.jpg" width="100%" height="100%" alt="grade9">
    </div>
   

     <div class="col-sm-3 offset-sm-2 bg-white mt-5">
      <img src="/assets/b_grade10.jpg" width="100%" height="100%" alt="grade10">
     </div>
     <div class="col-sm-3 offset-sm-2 bg-white mt-5">
      <img src="/assets/b_grade11.jpg" width="100%" height="100%" alt="grade11">
     </div>
    

 </div>
</div>
<% end %>
