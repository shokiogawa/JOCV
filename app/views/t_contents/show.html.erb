<div class="container bg-white p-5 mt-5">
 <div class="topic mt-3 text-center">
  <h2><%= @t_content.topic.title %></h2>
 </div>


 <div class="title mt-5 border-bottom border-info">
  <h1><%= @t_content.title %></h1>
 </div>

 <div class="TCON bg-light p-4 mt-5 border-rounded ">
  <% @t_content.s_contents.each do |content| %>

   <div class="stitle border-bottom mt-5">
     <h2><%= content.stitle %></h2>
   </div>
   <div class="content mt-5">
     <p><%= simple_format(content.content) %></p>
   </div>

  <% end %>
 </div>

</div>
