<div class="row">
<h2 class="mt-3">Add the examination</h2>
 <div class="col-sm-12 mt-5 exams">
   <%= form_with(model: [@topic, @exam], local: true ) do |f| %>
    
    <div class="form-group">
     <%= f.label :title, "Title" %>
     <%= f.text_field :title, class: "form-control" %>
    </div>


    <div class="exam mt-5">
      <%= f.fields_for :sexams do |t| %>
       <%= render "sexam_fields", f: t %>
      <% end %>
      <div class="links mb-3 text-right">
         <%= link_to_add_association "Add the content", f, :sexams, class: "btn btn-primary" %>
      </div>
    </div>
    <div class="text-right">
      <%= f.submit "add", class: "btn btn-danger"%>
    </div>
   <% end %>
 </div>

</div>
