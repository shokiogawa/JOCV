
<div class="row">
 
 <div class="col-sm-6 offset-sm-3 border border-info">
  <div class="text-center bg-info text-white rounded">
   <p>プロフィール設定</p>
  </div>
 <%= form_with(model: @user, local: true) do |f| %>
   <div class="form-group mt-4 border-bottom border-info">
     <p><%= f.label :image ,"〇画像" %></p>
     <%= f.file_field :image %>
   </div>

   <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
   </div>
   
   <div class="form-group">
     <%= f.label :country, "Country" %>
     <%= f.text_field :country %>
   </div>

   <p class="text-right"><%= f.submit "編集完了", class:"btn btn-primary" %></p>
    
     
 <% end %>
 
</div>
     
