<div class="row">
 <div class="col-sm-12 mt-5">
   <%= form_with(model: @t_content, local: true ) do |f| %>
    
    <div class="form-group">
     <%= f.label :title, "Title" %>
     <%= f.text_field :title, class: "form-control" %>
     <%= hidden_field_tag :topic_id, @topic.id %>
    </div>

    <div class="t_content">
      <%= f.fields_for :s_contents do |t| %>
       <%= render "s_content_fields", f: t %>
      <% end %>
      <div class="links mb-3 text-right">
         <%= link_to_add_association "Add the content", f, :s_contents, class: "btn btn-primary" %>
      </div>
    </div>
    <div class="text-right">
      <%= f.submit "add", class: "btn btn-danger"%>
    </div>
   <% end %>
 </div>
</div>